{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext"
  },
  "include": [
    "./index.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
